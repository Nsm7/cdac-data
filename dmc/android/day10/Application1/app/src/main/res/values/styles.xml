<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTextView">
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#0000ff</item>
    </style>

    <style name="AppButton">
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppButton_1" parent="AppButton">
        <item name="android:background">#286218</item>
    </style>

    <style name="AppButton_2" parent="AppButton">
        <item name="android:background">@drawable/my_button_1</item>
    </style>

    <style name="AppButton_3" parent="AppButton">
        <item name="android:background">@drawable/my_button_2</item>
    </style>

    <style name="AppButton_4" parent="AppButton">
        <item name="android:background">@drawable/my_button_3</item>
    </style>

</resources>
